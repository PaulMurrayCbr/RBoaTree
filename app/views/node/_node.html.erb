<% if node.nil? %>
	<span class='<%=node_css(nil)%>'>--NIL--</span>
<% else %>
	<span class='<%=node_css(node)%>'><%=node.name%></span><%=
	link_to "&larr;", controller: :node, action: :node, id: node.copy_of.id if node.copy_of %><%=
	link_to "[n#{node.id}]", controller: :node, action: :node, id: node.id%><%=
	link_to "&rarr;", controller: :node, action: :node, id: node.replacement.id if node.replacement %>/<%=
	render partial:'tree/tree', object: node.tree %>
<% end %>
