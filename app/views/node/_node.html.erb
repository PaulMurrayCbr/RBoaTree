<% if node.nil? %>
	<span class='<%=node_css(nil)%>'>--NIL--</span>
<% else %>
	<%= link_to "\u2190", controller: :node, action: :node, id: node.prev_node_id if node.prev_node_id %><%=
	 link_to "#{node.name}[n#{node.id}]", {controller: :node, action: :node, id: node.id}, {class: node_css(node) } %><%=
	link_to "\u2192", controller: :node, action: :node, id: node.next_node_id if node.next_node_id %>/<%=
	render partial:'tree/tree', object: node.tree %>
<% end %>
