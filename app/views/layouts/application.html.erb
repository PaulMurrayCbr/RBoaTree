<!DOCTYPE html>
<html>
	<head>
		<title>Boatree test app</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title><%= content_for?(:title) ? yield(:title) : "Boatree sample app" %></title>
		<meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Boatree sample app" %>">

		<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
		<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div class="container-fluid">
			<div class="row-fluid">
				<div class="span12">
					<%= render 'layouts/navigation' %>
				</div>
			</div>
			<div class="row-fluid">
				<!--  if there is a partial for the sidebar, the render that -->
				<div class="span2">
					<%= yield :sidebar %>
				</div>
				<div class="span10">
					<%= render 'layouts/messages' %>
					<%= yield %>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span12">
					<%= render 'layouts/footer' %>
				</div>
			</div>
		</div>
	</body>
</html>
